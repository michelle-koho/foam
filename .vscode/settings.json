{
  "editor.minimap.enabled": true,
  "editor.wrappingIndent": "indent",
  "editor.overviewRulerBorder": false,
  "editor.lineHeight": 24,
  "editor.fontFamily": "'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback', 'Noto Color Emoji'",
  "[markdown]": {
    "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on",
        "other": "on"
    }
  },
  "files.defaultLanguage": "markdown",
  "files.exclude": {
    "**/node_modules": true
  },
  "files.watcherExclude": {
    "**/node_modules": true
  },
  "foam.edit.linkReferenceDefinitions": "off",
  "foam.openDailyNote.directory": "journal",
  "foam.openDailyNote.titleFormat": "fullDate",
  "git.enableSmartCommit": true,
  "git.postCommitCommand": "sync",
  "markdown.preview.breaks": true,
  "pasteImage.path": "${projectRoot}/attachments",
  "pasteImage.showFilePathConfirmInputBox": true,
  "prettier.singleQuote": false,
  "gitdoc.enabled": true,
  "foam.graph.style": {
    "node": {
        "journal": "green",
        "documentation": "lightblue",
    }
  },
  "foam.files.ignore": [
    "**/.vscode/**/*",
    "**/_layouts/**/*",
    "**/_site/**/*",
    "**/node_modules/**/*"
  ],
  "todo-tree.regex.subTagRegex": "\\[(.*?)\\]",
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules",
    "**/.foam/**/*"
  ],
  "todo-tree.tree.buttons.groupBySubTag": true,
  "markdownExtended.pdfFormat": "Letter",
  "markdown.extension.print.theme": "dark",
  "markdownExtended.disabledPlugins": "kbd",
  "markdown-checkbox.checkmark": "x",
  "markdown-checkbox.strikeThroughWhenChecked": false,
  "markdown-checkbox.typeOfBulletPoint": "-",
  "markdown-checkbox.italicWhenChecked": false,
  "gitdoc.autoCommitDelay": 60000,
  "gitdoc.autoPush": "afterDelay",
  "gitdoc.autoPushDelay": 70000,
}
